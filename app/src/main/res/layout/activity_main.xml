<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/transformBtn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:onClick="sendMessage"
            android:text="open second activity V1">
        </Button>
        <Button
            android:id="@+id/transformBtn2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="open second activity V2">
        </Button>
        <Button
            android:id="@+id/openURL"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="open google">
        </Button>
        <Button
            android:id="@+id/share"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:text="share">
        </Button>
        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="call phone number">
        </Button>
        <Button
            android:id="@+id/openContactApp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="open Contact App">
        </Button>
    </LinearLayout>
</LinearLayout>